<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/card">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/addmoney" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="80dp"
                android:gravity="center"
                android:text="@string/amount_payable_label"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize15" />

            <TextView
                android:id="@+id/payable_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="@string/amount_payable_text"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize18" />


        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="@string/wallet_balance_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/wallet_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:text="@string/amount_payable_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize13" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/b1"
                    android:layout_width="0.0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/opcard_border"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/visa" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/b2"
                    android:layout_width="0.0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/opcard_border"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/mastercard" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/b3"
                    android:layout_width="0.0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/opcard_border"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/rupay" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0.0dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/opcard_border"
                    android:foreground="?attr/selectableItemBackground"
                    android:onClick="procceedPayment">

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
            android:id="@+id/b4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/card"
            android:foreground="?attr/selectableItemBackground">

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/debit_credit_card_text"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize13" />

                <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:src="@drawable/arrow_grey_right" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/b5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/card"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize13"
                android:text="@string/netbanking_text" />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/arrow_grey_right" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textSize="@dimen/textsize12"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/secure_text"
            android:gravity="center"/>
        <View
            android:layout_gravity="center"
            android:background="@color/litegrey"
            android:layout_width="200dp"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="400dp"
                android:layout_height="20dp"
                android:src="@drawable/bottom_logos"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
