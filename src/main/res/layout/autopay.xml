<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card"
        android:layout_margin="10dp"
        android:orientation="horizontal">

            <RadioButton
                android:layout_marginRight="20dp"
                android:id="@+id/prepaid_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prepaid"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/postpaid_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postpaid"/>

    </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mobile_operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:hintEnabled="false">

            <EditText
                android:paddingRight="20dp"
                android:textColor="@color/blackdark"
                android:drawableRight="@drawable/arrow_grey_right"
                android:id="@+id/mobile_operator_edit"
                android:cursorVisible="false"
                android:focusable="false"
                android:background="@drawable/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/operator_hint"
                android:inputType="text"
                android:textSize="@dimen/textsize14"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:hintEnabled="false">

            <EditText
                android:textColor="@color/blackdark"
                android:background="@drawable/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mobile_number_hint"
                android:maxLength="10"
                android:inputType="phone"
                android:textSize="@dimen/textsize14"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mobile_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:hintEnabled="false">
            <EditText
                android:textColor="@color/blackdark"
                android:background="@drawable/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/amount_hint"
                android:maxLength="4"
                android:inputType="number"
                android:textSize="@dimen/textsize14"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/date_pick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:hintEnabled="false">

            <EditText
                android:paddingRight="20dp"
                android:textColor="@color/blackdark"
                android:drawableRight="@drawable/arrow_grey_right"
                android:id="@+id/date_pick_edit"
                android:cursorVisible="false"
                android:focusable="false"
                android:background="@drawable/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_hint"
                android:inputType="text"
                android:textSize="@dimen/textsize14"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/add_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/add_btn"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/blue_btn"
            android:textColor="@color/white"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/btn_text_size"
            style="?android:attr/borderlessButtonStyle"
            android:foreground="?attr/selectableItemBackground"/>

        <Button
            android:id="@+id/saved_connection_btn"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/saved_connection_text"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textsize14"
            style="?android:attr/borderlessButtonStyle"
            android:foreground="?attr/selectableItemBackground"
            android:background="@color/white"/>

    </LinearLayout>


</RelativeLayout>