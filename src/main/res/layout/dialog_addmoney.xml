<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/addmoney_wallet_text"
            android:textSize="@dimen/textsize15"
            android:textColor="@color/black" />

       <TextView
           android:id="@+id/cancel"
           android:background="@drawable/round_shadow"
           android:layout_alignParentRight="true"
           android:layout_centerHorizontal="true"
           android:layout_width="wrap_content"
           android:layout_height="45dp"
           android:layout_marginTop="5dp"
           android:layout_marginRight="15dp"
           android:text="X"
           android:textColor="@color/colorAccent"
           android:textStyle="bold"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:gravity="center"
           android:foreground="?attr/selectableItemBackground"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/litegrey" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_amount"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1.4"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            app:hintEnabled="false">

            <EditText
                android:textColor="@color/blackdark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit"
                android:hint="AMOUNT"
                android:inputType="number"
                android:maxLength="5"
                android:textSize="@dimen/textsize14"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/addmoney_btn"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.6"
            android:layout_width="0.0dp"
            android:layout_height="45dp"
            android:background="@drawable/blue_btn"
            android:text="@string/addmoney_btn"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_text_size"
            style="?android:attr/borderlessButtonStyle"
            android:foreground="?attr/selectableItemBackground"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="35dp">


    <Button
            android:id="@+id/plus100"
            android:foreground="?attr/selectableItemBackground"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorAccent"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/round_shadow"
            android:text="@string/one_hundered_btn"
            android:textStyle="bold" />

        <Button
            android:id="@+id/plus500"
            android:foreground="?attr/selectableItemBackground"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorAccent"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/round_shadow"
            android:text="@string/five_hundered_btn"
            android:textStyle="bold" />

        <Button
            android:id="@+id/plus1000"
            android:foreground="?attr/selectableItemBackground"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorAccent"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@drawable/round_shadow"
            android:text="@string/one_thousand_btn"
            android:textStyle="bold" />
</RelativeLayout>
</LinearLayout>