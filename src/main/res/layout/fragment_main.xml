<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/card"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <RelativeLayout
                android:id="@+id/sendmoney"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableTop="@drawable/ic_sendmoney"
                    android:gravity="center"
                    android:text="@string/sendmoney_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/requestmoney"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableTop="@drawable/ic_requestmoney"
                    android:gravity="center"
                    android:text="@string/requestmoney_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/addmoney"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableTop="@drawable/ic_addwallet"
                    android:gravity="center"
                    android:text="@string/addmoney_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12" />

            </RelativeLayout>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="3.0">

            <RelativeLayout
                android:id="@+id/coupons"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableTop="@drawable/ic_coupons"
                    android:gravity="center"
                    android:text="@string/my_coupons_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12" />

            </RelativeLayout>
            <View
                android:layout_gravity="center"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@color/ddd"/>

            <RelativeLayout
                android:id="@+id/rewards"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableTop="@drawable/ic_gift"
                    android:gravity="center"
                    android:text="@string/my_rewards_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12" />

            </RelativeLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/ddd"/>

            <RelativeLayout
                android:id="@+id/offers"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableTop="@drawable/ic_offers"
                    android:gravity="center"
                    android:text="@string/all_offers_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12" />

            </RelativeLayout>

        </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/spotlight"
                    android:visibility="visible"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dip">

                    <ProgressBar
                        android:visibility="visible"
                        android:id="@+id/progress"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        android:indeterminateTint="@color/colorAccent"/>

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>

         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:textSize="@dimen/textsize14"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/recharge_billpay_text" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="4">

            <RelativeLayout
                android:id="@+id/mobile"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableTop="@drawable/ic_mobile"
                    android:gravity="center"
                    android:text="@string/mobile_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/datacard"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <TextView
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize12"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/datacard_text"
                    android:drawableTop="@drawable/ic_datacard" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/dth"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableTop="@drawable/ic_dth"
                    android:gravity="center"
                    android:text="@string/dth_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/electricity"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <TextView
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize12"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/electricity_text"
                    android:drawableTop="@drawable/ic_electricity" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="4">

            <RelativeLayout
                android:id="@+id/landline"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <TextView
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize12"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/landline_text"
                    android:drawableTop="@drawable/ic_landline" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/broadband"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <TextView
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize12"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/broadband_text"
                    android:drawableTop="@drawable/ic_broadband" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/googleplay"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <TextView
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize12"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/googleplay_text"
                    android:drawableTop="@drawable/ic_googleplay" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/autopay"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <TextView
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize12"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/autopay_text"
                    android:drawableTop="@drawable/ic_pay" />
            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

</LinearLayout>
</RelativeLayout>