<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="5dp">

     <ImageView
         android:id="@+id/of_oplogo"
         android:layout_marginTop="18dp"
         android:layout_marginLeft="15dp"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:src="@drawable/round_shadow_dark"/>

        <TextView
            android:id="@+id/of_opname"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:text="@string/operator_name_text"
            android:textSize="@dimen/textsize12"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/of_mobile"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:text="@string/mobile_no_text"
            android:textSize="@dimen/textsize11"
            android:textColor="@color/black1"/>
        <TextView
            android:id="@+id/of_date"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:text="@string/demo_date_text1"
            android:textSize="@dimen/textsize9"
            android:textColor="@color/black1"/>

        <TextView
            android:id="@+id/of_amount"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="@string/amount_payable_text"
            android:textSize="@dimen/textsize15"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/delete_btn"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:background="@color/red"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="DELETE"
            android:textStyle="bold"
            android:textSize="@dimen/textsize10"
            android:textColor="@color/white"/>

    </RelativeLayout>


</LinearLayout>